<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.RegistrationActivity"
    android:orientation="vertical"
    android:background="#ffffff"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/signup_page_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Name"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:startIconDrawable="@drawable/baseline_person_outline_24"
            app:boxCornerRadiusTopEnd="16dp"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="#FF6060">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_reg_field"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Email"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/baseline_email_24"
            app:boxStrokeColor="#FF6060">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_reg_field"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Password"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/sharp_key_24"
            app:endIconTint="#FF6060"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="#FF6060">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_reg_field"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Confirm Password"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/sharp_key_24"
            app:endIconTint="#FF6060"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="#FF6060">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirm_pass_field"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:theme="@android:style/Theme.Material"
            android:text="sign up"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner"
            android:id="@+id/signup_reg_button" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?  "
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="10sp"
                />
            <TextView
                android:id="@+id/login_btn_signup_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login!"
                android:layout_gravity="center"
                android:textColor="#FF6060"
                android:textStyle="bold"
                android:layout_marginBottom="10sp"
                />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>